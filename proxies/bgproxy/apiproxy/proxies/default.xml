<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="default">
    <PreFlow name="PreFlow">
        <Request>
            <Step>
                <Name>AssignMessage.SetActive</Name>
            </Step>
            <Step>
                <Name>AssignMessageSetCanaryMode</Name>
            </Step>
            <Step>
                <Name>JavaScriptBalanceManager</Name>
            </Step>
        </Request>
        <Response/>
    </PreFlow>
    <Flows>
        <Flow name="AddPayloadToLB">
            <Description/>
            <Request/>
            <Response>
                <Step>
                    <Name>AssignMessage.AddPayloadToLB</Name>
                </Step>
            </Response>
            <Condition>(proxy.pathsuffix MatchesPath "/_lb") and ((request.verb = "GET") or (request.verb = "HEAD"))</Condition>
        </Flow>
    </Flows>
    <PostFlow name="PostFlow">
        <Request/>
        <Response/>
    </PostFlow>
    <HTTPProxyConnection>
        <BasePath>/ls-test-bgproxy</BasePath>
        <VirtualHost>secure</VirtualHost>
    </HTTPProxyConnection>
    <RouteRule name="NoRouteLB">
        <Condition>(proxy.pathsuffix MatchesPath "/_lb") and ((request.verb = "GET") or (request.verb = "HEAD"))</Condition>
    </RouteRule>
    <RouteRule name="blue">
        <Condition>(private.route_to == "blue")</Condition>
        <TargetEndpoint>blue</TargetEndpoint>
    </RouteRule>
    <RouteRule name="green">
        <Condition>(private.route_to == "green")</Condition>
        <TargetEndpoint>green</TargetEndpoint>
    </RouteRule>
</ProxyEndpoint>